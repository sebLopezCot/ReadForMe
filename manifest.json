{
  "manifest_version": 2,

  "name": "ReadForMe",
  "description": "Let your browser read for you. Because who isn't lazy?",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.min.js", "on_load.js"],
      "css": ["injection.css"],
      "run_at": "document_idle"
    }
   ],
  "permissions": [
   "http://*/*",
   "https://*/*",
   "tabs",
   "activeTab",
   "webNavigation"
   ]
}
